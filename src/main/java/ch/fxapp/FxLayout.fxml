<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
          styleClass="layout" gridLinesVisible="false">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <children>

        <HBox styleClass="header" alignment="CENTER" GridPane.rowIndex="0" GridPane.columnSpan="4">
            <Label text="SUDOKU SOLVER"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER" GridPane.rowIndex="1" GridPane.columnSpan="4">
            <GridPane fx:id="sudokuGrid" styleClass="sudokugrid">
                <!---->
                <!-- THIS IS THE GRID PANE FOR THE SUDOKU FIELDS -->
                <!---->
            </GridPane>
        </HBox>
        <HBox styleClass="clickbutton" spacing="10" alignment="CENTER" GridPane.rowIndex="2" GridPane.columnSpan="4">
            <Button text="Get Sudoku" onAction="#clickOnGetSudoku" />
            <Button text="Solve Sudoku" onAction="#clickOnSolveSudoku" />
        </HBox>

        <HBox styleClass="createdby" spacing="10" alignment="CENTER" GridPane.rowIndex="4" GridPane.columnSpan="4">
            <Label text="Created by Roland Jaggi, Michael Wettstein, Joel Iselin" textFill="#182b80"/>
        </HBox>

    </children>

    <stylesheets>
        <URL value="@FxStyle.css"/>
    </stylesheets>
</GridPane>